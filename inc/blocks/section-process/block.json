{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "julianboelen/section-process",
  "version": "1.0.0",
  "title": "Section Process",
  "category": "julianboelen-blocks",
  "icon": "list-view",
  "description": "A streamlined process section with customizable step cards from Process Step custom post type",
  "keywords": ["process", "steps", "cards", "workflow", "timeline"],
  "supports": {
    "html": false,
    "anchor": true,
    "customClassName": true,
    "inserter": true,
    "multiple": true,
    "reusable": true,
    "spacing": {
      "padding": true,
      "margin": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true
    },
    "color": {
      "background": true,
      "text": true
    }
  },
  "attributes": {
    "sectionTitle": {
      "type": "string",
      "default": "Een gestroomlijnd proces"
    },
    "backgroundColor": {
      "type": "string",
      "default": "#f9fafb"
    },
    "titleColor": {
      "type": "string",
      "default": "#111827"
    },
    "useCustomPostType": {
      "type": "boolean",
      "default": true
    },
    "postsPerPage": {
      "type": "number",
      "default": -1
    },
    "processSteps": {
      "type": "array",
      "default": []
    },
    "columnsDesktop": {
      "type": "string",
      "default": "4",
      "enum": ["2", "3", "4"]
    },
    "columnsTablet": {
      "type": "string",
      "default": "2",
      "enum": ["1", "2", "3"]
    },
    "columnsMobile": {
      "type": "string",
      "default": "1",
      "enum": ["1", "2"]
    },
    "cardBackgroundColor": {
      "type": "string",
      "default": "#ffffff"
    },
    "cardTextColor": {
      "type": "string",
      "default": "#111827"
    },
    "cardDescriptionColor": {
      "type": "string",
      "default": "#6b7280"
    },
    "enableHoverEffect": {
      "type": "boolean",
      "default": true
    },
    "cardBorderRadius": {
      "type": "string",
      "default": "16",
      "enum": ["0", "8", "12", "16", "24"]
    },
    "gapSize": {
      "type": "string",
      "default": "24",
      "enum": ["16", "24", "32", "40"]
    },
    "showStepNumbers": {
      "type": "boolean",
      "default": true
    },
    "stepNumberStyle": {
      "type": "string",
      "default": "prefix",
      "enum": ["prefix", "badge", "none"]
    }
  },
  "textdomain": "julianboelen",
  "editorScript": "julianboelen-section-process-editor",
  "style": "file:./style.css",
  "render": "file:./render.php"
}